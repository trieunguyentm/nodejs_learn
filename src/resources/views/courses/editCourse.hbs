<form method="post" action="/courses/{{course._id}}/update?_method=PUT" style="margin-top: 10px">
    <div class="mb-3">
        <label for="name" class="form-label">Tên khóa học</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Tên khóa học" value="{{course.name}}">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Mô tả khóa học</label>
        <input type="text" class="form-control" id="description" name="description" placeholder="Mô tả khóa học" value="{{course.description}}">
    </div>
    <button type="submit" class="btn btn-primary">Lưu thông tin</button>
</form>
